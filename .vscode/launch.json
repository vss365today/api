{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole",
      "env": {
        "SYS_VARS_PATH": "${workspaceFolder}/../secrets"
      }
    },
    {
      "name": "API (dev)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "pythonArgs": ["-Wd"],
      "console": "integratedTerminal",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "SYS_VARS_PATH": "${workspaceFolder}/../secrets",
        "FLASK_SKIP_DOTENV": "1",
      },
      "args": [
        "run",
        "--no-debugger"
      ],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "API (test)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "pythonArgs": [
        "-Wd"
      ],
      "console": "internalConsole",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "testing",
        "FLASK_DEBUG": "1",
        "SYS_VARS_PATH": "${workspaceFolder}/../secrets",
        "FLASK_SKIP_DOTENV": "1",
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ]
    }
  ]
}
